<webapp>
    <servlet>
        <servlet-name>createAccount</servlet-name>
        <servlet-class>CreateAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createAccount</servlet-name>
        <url-pattern>/create-account*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>verifySignup</servlet-name>
        <servlet-class>VerifySignup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>verifySignup</servlet-name>
        <url-pattern>/verify-signup*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</webapp>
